/* pages/studentLeave/studentLeave.wxss */
page {
  padding-top: 16rpx;
  padding-bottom: 88rpx;
}

.card {
  padding: 24rpx;
  padding-top: 0;
  background-color: #fff;
  margin-bottom: 16rpx;
}

.head {
  display: flex;
  justify-content: space-between;
  height: 69rpx;
  line-height: 69rpx;
  border-bottom: 2rpx solid #E5E5E5;
  margin-bottom: 8rpx;
}

.createtime {
  font-size: 26rpx;
  color: #333;
  font-weight: 400;
}

.status {
  font-size: 28rpx;
  font-weight: 600;
}

.no {
  color: #FFCD7C;
}

.yes {
  color: #5DBBAD;
}

.false {
  color: #F10101;
}

.time {
  display: flex;
  font-size: 26rpx;
  color: #666;
  line-height: 48rpx;
  flex-wrap: wrap;
}

.label {
  /* flex: 3; */
  width: 150rpx;
}

.desc {
  /* flex: 13; */
  width: 552rpx;
  word-wrap: break-word;
  word-break: break-all;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

.addBtn {
  background:linear-gradient(90deg,rgba(38,239,210,1) 0%,rgba(93,187,173,1) 100%);
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 88rpx;
  color: #fff;
  font-size: 30rpx;
  line-height: 88rpx;
  font-weight: 600;
}