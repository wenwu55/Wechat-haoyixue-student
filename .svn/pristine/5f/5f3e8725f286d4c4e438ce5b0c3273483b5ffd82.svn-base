/* pages/bindStudent/bindStudent.wxss */
page {
  background-color: #F4F5F9;
  padding-top: 17rpx;
}

.list {
  background-color: #fff;
  line-height: 102rpx;
  color: #666666;
  font-size: 30rpx;
  font-family:PingFangSC-Regular,PingFangSC;
  margin-bottom: 17rpx;
  padding: 0 24rpx;
  display: flex;
  justify-content: space-between;
}

.buttonView {
  display: flex;
  padding-top: 21rpx;
}

.btn {
  display: inline-block;
  padding: 0 14rpx;
  border: 1px solid #5DBBAD;
  color: #5DBBAD;
  font-size: 28rpx;
  line-height: 60rpx;
  height: 60rpx;
  border-radius: 4rpx;
  margin-left: 32rpx;
}

.addBtn {
  background:linear-gradient(90deg,rgba(38,239,210,1) 0%,rgba(93,187,173,1) 100%);
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 88rpx;
  color: #fff;
  font-size: 30rpx;
  line-height: 88rpx;
  font-weight: 600;
}