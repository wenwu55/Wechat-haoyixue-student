/* pages/homework/homework.wxss */

page{
  width: 100%;
  height: 100%;
  background-color: #F4F5F9;
}
.container{
  width: 100%;
  height: 100%;
}
.nav {
  height: 92rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 88rpx;
  background: #fff;
  font-size: 30rpx;
  font-weight: 600;
  white-space: nowrap;
  position: fixed;
  color: #999999;
  top: 0;
  left: 0;
  z-index: 99;
}
.nav-item {
    width: 20%;
    display: inline-block;
    text-align: center;
}
.nav-item.active{
  color: #5DBBAD;
  border-bottom: 4rpx solid #5DBBAD;
}
.tab-box{
    background: #F4F5F9;
    padding-top: 80rpx;
    height: 100%;
    box-sizing: border-box;
}
.tab-content{
    overflow-y: scroll;
}

.card {
  background-color: #fff;
  margin-top: 24rpx;
  padding: 24rpx;
}

.head {
  display: flex;
  justify-content: space-between;
  font-family:PingFangSC-Medium,PingFangSC;
  line-height:42rpx;
}

.title {
  font-size:30rpx;
  font-weight:600;
  color:rgba(51,51,51,1);
}

.time {
  font-size:26rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
}

.main {
  font-size:28rpx;
  font-weight:400;
  color:rgba(102,102,102,1);
  line-height:40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}