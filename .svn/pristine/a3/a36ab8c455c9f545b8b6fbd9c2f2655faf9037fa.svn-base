/**index.wxss**/
.weui-navbar__item {
  font-size: 28rpx;
  font-weight: 600;
  line-height: 88rpx;
  padding: 0;
  font-family:PingFangSC-Semibold,PingFangSC;
  color: #999999;
}

.weui-navbar__item.weui-bar__item_on {
  color:rgba(93,187,173,1);
  background-color: #fff;
  border-bottom: 4rpx solid #5DBBAD;
}

.detail {
  background-color: #fff;
  padding: 24rpx 24rpx 31rpx 24rpx;
  margin-top: 16rpx;
}

.photo {
  width: 100%;
  height: 395rpx;
}

.name {
  font-size: 30rpx;
  font-family:PingFangSC-Medium,PingFangSC;
  font-weight:600;
  color:rgba(51,51,51,1);
  line-height:82rpx;
}

.number {
  font-size: 28rpx;
  font-family:PingFangSC-Regular,PingFangSC;
  font-weight:400;
  color:rgba(102,102,102,1);
}

.inOut {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  margin-left: 10rpx;
}

.dateView {
  padding: 24rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 30rpx;
  display: flex;
  justify-content: space-between;
}

.section {
  display: flex;
  line-height: 60rpx;
}

.picker {
  line-height: 60rpx;
  font-size: 28rpx;
  color: #333;
  width: 200rpx;
  text-align: center;
  background-color: #fff;
  border-radius: 6rpx;
  margin-left: 10rpx;
}