<!--pages/bindStudent/bindStudent.wxml-->
<view wx:if="{{hasStudent}}">
  <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
    <view class="weui-cell weui-cell_example weui-cell_access">
      <view class="weui-cell__bd">学校</view>
      <view class="weui-cell__ft weui-cell__ft_in-access">说明文字</view>
    </view>
  </picker>

  <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
    <view class="weui-cell weui-cell_example weui-cell_access">
      <view class="weui-cell__bd">班级</view>
      <view class="weui-cell__ft weui-cell__ft_in-access">说明文字</view>
    </view>
  </picker>

  <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
    <view class="weui-cell weui-cell_example weui-cell_access">
      <view class="weui-cell__bd">学生</view>
      <view class="weui-cell__ft weui-cell__ft_in-access">说明文字</view>
    </view>
  </picker>

  <button class="commit {{disabled ? 'disabled' : ''}}">提交</button>

</view>