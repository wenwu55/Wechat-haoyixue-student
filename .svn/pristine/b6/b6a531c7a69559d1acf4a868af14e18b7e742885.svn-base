/* pages/studentMessage/studentMessage.wxss */
page {
  padding-top: 16rpx;
  padding-bottom: 88rpx;
}

.card {
  padding: 24rpx;
  background-color: #fff;
  margin-bottom: 16rpx;
}

.desc {
  font-size: 28rpx;
  color: #333;
  font-family:PingFangSC-Regular,PingFangSC;
  font-weight:400;
  line-height: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  margin-bottom: 12rpx;
}

.date {
  text-align: right;
  color: #999;
  font-family:PingFangSC-Regular,PingFangSC;
  font-weight:400;
  font-size: 26rpx;
}

.addBtn {
  background:linear-gradient(90deg,rgba(38,239,210,1) 0%,rgba(93,187,173,1) 100%);
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 88rpx;
  color: #fff;
  font-size: 30rpx;
  line-height: 88rpx;
  font-weight: 600;
}